<ScatterTextWidget>:
	orientation: 'vertical'
	TextInput:
		id: my_textinput
		font_size: 75
		size_hint_y: None 
		height: 95
		text: 'default'
		on_text: root.change_label_colour()
	FloatLayout:
		Scatter:
			Label:
				id: my_label
				text: my_textinput.text
				on_text: root.change_input_to_upper()
				font_size: 75
